{
  "manifest_version": 2,

  "name": "Minta",
  "description": "Converts various different currencies to ISK(Icelandic kronas)",
  "version": "1.0",

  "permissions": [
    "tabs", 
    "http://*/*",
    "contextMenus"
  ],
  "content_scripts": [{
    "matches": ["http://*/*","https://*/*"],
    "css" : ["extension.css"],
    "js": ["jquery-1.10.1.min.js", "extension.js"]
    }],

  "background": {
    "scripts": ["jquery-1.10.1.min.js","background.js"]
  },
"icons": {
    "16": "icon-bitty.png",
    "48": "icon-small.png",
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}